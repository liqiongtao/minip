{
    "eslint.enable": true,
    "prettier.printWidth": 800,
    "prettier.bracketSameLine": false,
    "prettier.singleQuote": false,
    "prettier.trailingComma": "none",
    "editor.tabSize": 4,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit"
    },
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.patterns": {
        ".env": ".env.*",
        "tsconfig.json": "tsconfig.*.json, env.d.ts",
        "vite.config.*": "jsconfig*, vitest.config.*, cypress.config.*, playwright.config.*, postcss.config.js",
        "package.json": "package-lock.json, pnpm*, .yarnrc*, yarn*, .eslint*, eslint*, .prettier*, prettier*, .editorconfig, .npmrc, auto-import.d.ts, components.d.ts, babel.config.js, .hintrc, jsconfig.json, project.tt.json"
    }
}
